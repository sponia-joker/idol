/** 模态 **/

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 97;
  background-color: rgba(0, 0, 0, 0.75);
}

.modal-layer {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #2d252f;
  box-shadow: 0 8rpx 20rpx 18rpx rgba(250, 185, 171, 0.08);
  border-radius: 26rpx;
  /* width: 620rpx;
  height: 524rpx; */
  z-index: 98;
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate3d(-50%, -50%, 0);
}
.modal-body{
  width: 100%;
}

