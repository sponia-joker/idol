.modal-footer {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  bottom: 74rpx;
}

.btn {
  text-align: center;
  width: 236rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 28rpx;
  border-radius: 38rpx;
}

.btn-default {
  border: 1px solid #fab9ab;
  background-color: #2d252f;
  color: #fab9ab;
}

.btn-primary {
  border: 1px solid #fab9ab;
  background-color: #fab9ab;
  color: #332c34;
}
