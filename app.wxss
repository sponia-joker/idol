/**app.wxss**/

view,scroll-view, image, text, navigator, .container {
  box-sizing: border-box;
  font-weight: 400;
  padding: 0;
  margin: 0;
}

/* flower-template */

.flower-template {
  display: flex;
  align-items: center;
}

.flower-template-number {
  font-size: 28rpx;
  color: #fab9ab;
  margin-right: 10rpx;
}

.flower-template-icon {
  width: 23rpx;
  height: 23rpx;
}

/* 六边形 */

.hexagon {
  text-align: center;
  font-size: 14rpx;
  color: rgba(31, 31, 31, 1);
  line-height: 14rpx;
  width: 24rpx;
  height: 14rpx;
  background: rgba(250, 185, 171, 1);
  position: relative;
}

.hexagon:before {
  content: "";
  position: absolute;
  top: -5rpx;
  left: 0;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 6rpx solid rgba(250, 185, 171, 1);
}

.hexagon:after {
  content: "";
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 6rpx solid rgba(250, 185, 171, 1);
}
